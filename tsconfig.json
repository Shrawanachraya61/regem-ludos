{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "preact": [
        "node_modules/preact/"
      ]
    },
    "target": "ES2017",
    "module": "amd",
    "moduleResolution": "node",
    "outFile": "./main.js",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "lib": [
      "dom",
      "ES2017"
    ],
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
  },
  "references": [],
  "include": [
    "src/**/*",
  ]
}