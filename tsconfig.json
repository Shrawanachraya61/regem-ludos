{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2017",
    "module": "amd",
    "moduleResolution": "node",
    "outFile": "./main.js",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "jsx": "react",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}