{
  "name": "golems",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn watch",
    "start:dist": "http-server -o dist/index.html -p 8764",
    "build": "yarn && rm -rf *.map main.js && tsc --sourceMap false && node scripts/build src",
    "build:dev": "yarn build:dist",
    "build:dist": "rm -rf *.map main.js && yarn encode-map && tsc --sourceMap false && node scripts/build src",
    "watch": "tsc && concurrently -n 1,2 \"http-server -o index.html -p 8764 \" \"tsc --watch\"",
    "encode-map": "node scripts/encode-map.js"
  },
  "dependencies": {
    "concurrently": "^6.1.0",
    "http-server": "^0.12.3"
  },
  "devDependencies": {
    "@types/node": "^11.9.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-minifier": "^4.0.0",
    "pngjs": "^5.0.0",
    "prettier": "^2.0.5",
    "terser": "^5.7.0",
    "typescript": "^3.9.3",
    "uglifycss": "0.0.29"
  },
  "browserslist": "> 0.25%, not dead"
}
