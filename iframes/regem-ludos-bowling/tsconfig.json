{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "references": [],
  "include": [
    "src/**/*",
  ]
}