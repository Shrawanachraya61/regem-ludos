{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "ES2020",
    "outFile": "public/server.js",
    "allowJs": true,
    "lib": [
      "dom",
      "ES2020"
    ],
    "removeComments": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/server/**/*"
  ]
}