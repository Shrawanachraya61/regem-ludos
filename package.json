{
  "name": "regem-ludos",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "yarn watch",
    "start:dist": "http-server --mimetypes ./scripts/mime.types ./dist -o index.html -g -p 8081",
    "build": "yarn clean && yarn zip && yarn build:rpgscript && yarn build:setup && yarn build:iframes && yarn docs && cross-env NODE_ENV=production yarn build:main",
    "build:setup": "mkdir -p dist && cp favicon.ico dist/",
    "build:main": "tsc --sourceMap false && node scripts/build src",
    "build:iframes": "yarn --cwd ./iframes build && mkdir -p dist/iframes/ && cp -r ./iframes/dist/* dist/iframes/",
    "build:rpgscript": "yarn once-keys && cp -v -r src/rpgscript/* res/rpgscript/",
    "once-keys": "node scripts/once-keys",
    "docs": "typedoc src/controller/scene-commands.ts --out dist/docs --theme minimal",
    "tsc": "tsc -v",
    "zip": "yarn zip:foley && yarn zip:images",
    "zip:foley": "cd res/snd/foley && rm -f foley.mp3 && audiosprite --silence 2 -e mp3 --output foley *.mp3",
    "zip:images": "(cd res && zip images.zip *.png iso-text/*.png)",
    "watch": "yarn zip && yarn build:rpgscript && tsc && concurrently -n 1,2 \"http-server --mimmetypes ./scripts/mime.types -o index.html\" \"tsc --watch\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='default' --reporters='./scripts/github-actions-reporter'",
    "clean": "rm -rf .build && rm -rf dist && rm -rf *.map main.js"
  },
  "devDependencies": {
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^11.9.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "audiosprite": "^0.7.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.6.0",
    "eslint-config-preact": "^1.1.4",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-minifier": "^4.0.0",
    "http-server": "^0.12.3",
    "hud-gamepad": "^0.5.9",
    "jest": "^27.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jszip": "3.1.5",
    "prettier": "^2.2.1",
    "terser": "^4.6.11",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3",
    "uglifycss": "0.0.29",
    "uuid": "^8.3.2"
  },
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "picostyle": "^2.2.0",
    "preact": "^10.5.7"
  }
}
